.sidebar
  .header
    .sidebar-header
      .sidebar-header__user
        = current_user.name
      %ul.sidebar-header__icons 
      %li.sidebar-header__list
      = link_to new_group_path ,class: "sidebar-header__btn" do
        = icon('fas', 'pen-square', class: 'icon')
      %li.sidebar-header__list
      = link_to edit_user_path(current_user.id),class: "sidebar-header__btn" do
        = icon('fas', 'cog', class: 'icon')
  .groups
    - current_user.groups.each do |group|
      .groups-content
        = link_to group_messages_path(group) ,class: "text-decoration" do
          .groups-content__group
            = group.name
          .groups-content__message
            = group.show_last_message